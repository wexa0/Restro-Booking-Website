@model Resort.Models.Auth.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_LandingLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/auth.css" asp-append-version="true" />
}

<div class="auth-logo">
    <img src="~/images/brand/restro-logo.png" alt="Restro" />
</div>



<div class="auth-page">
    <div class="auth-card">
        <div class="auth-top">
           

            <div class="auth-head">
                <h1 class="auth-title">Welcome back</h1>
                <p class="auth-sub">Login to continue booking your favorite chalets.</p>
            </div>
        </div>

        <form class="auth-form" asp-action="Login" method="post">
            @Html.AntiForgeryToken()

            @* Error summary *@
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="auth-error-summary" asp-validation-summary="All"></div>
            }

            <div class="auth-row">
                <div class="auth-label">Email</div>
                <input class="auth-input" asp-for="Email" placeholder="name@email.com" />
                <span asp-validation-for="Email"></span>
            </div>

            <div class="auth-row">
                <div class="auth-label">Password</div>
                <input class="auth-input" asp-for="Password" placeholder="••••••••" />
                <span asp-validation-for="Password"></span>
            </div>

            <div class="auth-actions">
                <label class="auth-check">
                    <input asp-for="RememberMe" />
                    Remember me
                </label>
            </div>

            <button class="auth-btn" type="submit">Login</button>

            <div class="auth-footer">
                Don’t have an account?
                <a asp-action="Register">Create one</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
