@{
    ViewData["Title"] = "Welcome";
    Layout = "_LandingLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/welcome.css" asp-append-version="true" />

}

<div class="welcome-page">
    <div class="welcome-bg"></div>
    <div class="welcome-overlay"></div>

    <div class="welcome-logo">
        <img src="~/images/brand/restro-logo.png" alt="Restro logo" />
    </div>

    <main class="welcome-content">
        <p class="welcome-kicker">Welcome to</p>

        <h1 class="welcome-title">
            <span class="brand">Restro Platform</span>
        </h1>

        <p class="welcome-subtitle">
            Discover and reserve your ideal getaway—<br />
            resorts, chalets, and more are all within your reach.
        </p>

        <div class="welcome-actions">
            <a class="btn-signin" asp-controller="Auth" asp-action="Login">Sign in</a>

            <p class="welcome-footnote">
                Don’t have an account?
                <a class="btn-signup" asp-controller="Auth" asp-action="Register">Sign up</a>
            </p>
        </div>

    </main>

</div>
